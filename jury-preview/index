    <script>
        // ===== FUNCIONES DE DEMO =====
        function mostrarDemoMessage(mensaje) {
            alert(`⚖️ DEMO PREVIEW - Kodyan JURI\n\n${mensaje}\n\nEsta es una versión de demostración. Todas las funcionalidades estarán disponibles en la versión completa.`);
        }

        // ===== FECHA ACTUAL =====
        function actualizarFecha() {
            const ahora = new Date();
            const opciones = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            
            const fechaFormateada = ahora.toLocaleDateString('es-AR', opciones);
            document.getElementById('fecha-actual').textContent = fechaFormateada;
        }

        // ===== INICIALIZACIÓN =====
        document.addEventListener('DOMContentLoaded', function() {
            console.log('⚖️ Kodyan JURI Demo Preview iniciado');
            actualizarFecha();
            
            // Mostrar mensaje de bienvenida
            setTimeout(() => {
                mostrarDemoMessage('Bienvenido a la demo de Kodyan JURI\n\nEste es un preview de cómo se verá y funcionará tu sistema de gestión jurídica.');
            }, 1000);
        });

        // Prevenir clicks en enlaces no funcionales
        document.addEventListener('click', function(e) {
            if (e.target.tagName === 'A' && !e.target.classList.contains('demo-active')) {
                e.preventDefault();
                mostrarDemoMessage('Esta sección estará disponible en la versión completa');
            }
        });
    </script>
