<script>
// ===== FUNCIONES DE DEMO =====
function mostrarDemoMessage(mensaje) {
  alert(`üöß DEMO PREVIEW\n\n${mensaje}\n\nEsta es una versi√≥n de demostraci√≥n. Todas las funcionalidades estar√°n disponibles en la versi√≥n completa.`);
}

// ===== FECHA ACTUAL - COMO JURI =====
function actualizarFecha() {
  const ahora = new Date();
  const opciones = { 
    weekday: 'long', 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  };
  
  const fechaFormateada = ahora.toLocaleDateString('es-AR', opciones);
  document.getElementById('fecha-actual').textContent = fechaFormateada;
}

// ===== INICIALIZACI√ìN =====
document.addEventListener('DOMContentLoaded', function() {
  console.log('üè• KodyanMED Demo Preview iniciado');
  actualizarFecha();
  
  // Mostrar mensaje de bienvenida
  setTimeout(() => {
    mostrarDemoMessage('Bienvenida a la demo de KodyanMED\n\nEste es un preview de c√≥mo se ver√° y funcionar√° tu sistema de gesti√≥n m√©dica.');
  }, 1000);
});

// Prevenir env√≠o de formularios
document.addEventListener('submit', function(e) {
  e.preventDefault();
  mostrarDemoMessage('Formulario de demo - Los datos no se guardar√°n');
});

// Prevenir clicks en enlaces no funcionales
document.addEventListener('click', function(e) {
  if (e.target.tagName === 'A' && !e.target.classList.contains('demo-active')) {
    e.preventDefault();
    mostrarDemoMessage('Esta secci√≥n estar√° disponible en la versi√≥n completa');
  }
});
</script>
